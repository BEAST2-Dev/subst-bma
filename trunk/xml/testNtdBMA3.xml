    <!-- The HKY substitution model (Hasegawa, Kishino & Yano, 1985)             -->
    <!--input spec='HKY' id='hky'>
        <parameter id="hky.kappa" name="kappa" value="1.0" lower="0.0"/>
        <frequencies id='freqs' spec='Frequencies'>
            <data idref='alignment'/>
        </frequencies>
    </input-->

    <input spec='NtdBMA' id='ntdBMA'>
        <parameter id="log.kappa" name="logKappa" value="0.0" lower="-Infinity" upper="Infinity"/>
        <parameter id="log.tn" name="logTN" value="0.0" lower="-Infinity" upper="Infinity"/>
        <parameter id="log.ac" name="logAC" value="0.0" lower="-Infinity" upper="Infinity"/>
        <parameter id="log.at" name="logAT" value="0.0" lower="-Infinity" upper="Infinity"/>
        <parameter id="log.gc" name="logGC" value="0.0" lower="-Infinity" upper="Infinity"/>
        <parameter id="log.gt" name="logGT" value="0.0" lower="-Infinity" upper="Infinity"/>
        <input spec='beast.core.parameter.IntegerParameter' id="modelChoose" name="modelChoose" value='3' lower='0' upper='5' dimension="1"/>
        <frequencies id='freqs' spec='Frequencies'>
            <data idref='alignment'/>
        </frequencies>
    </input>

    <!-- site model                                                              -->
    <input spec='SiteModel' id="siteModel">
        <substModel idref='ntdBMA'/>
    </input>

    <input spec='TreeLikelihood' id="treeLikelihood">
        <data idref="alignment"/>
        <tree idref="tree"/>
        <siteModel idref="siteModel"/>
    </input>


    <tree spec='beast.util.ClusterTree' id='tree' clusterType='upgma'>
        <taxa idref='alignment'/>
    </tree>


    <run spec="MCMC" id="mcmc" chainLength="500000">
        <state storeEvery='100000'>
            <stateNode idref="log.kappa"/>
            <stateNode idref="log.tn"/>
            <stateNode idref="log.ac"/>
            <stateNode idref="log.at"/>
            <stateNode idref="log.gc"/>
            <stateNode idref="log.gt"/>
            <stateNode idref="modelChoose"/>
            <stateNode idref="tree"/>
        </state>


        <distribution spec="CompoundDistribution" id="posterior">
            <distribution id="log.kappa.prior" spec="beast.math.distributions.Prior">
                <distribution id="log.kappa.norm" spec="beast.math.distributions.Normal" mean="0" sigma="3"/>
                <x idref="log.kappa"/>
            </distribution>
            <distribution id="log.TN.prior" spec="beast.math.distributions.Prior">
                <distribution id="log.TN.norm" spec="beast.math.distributions.Normal" mean="0" sigma="0.03"/>
                <x idref="log.tn"/>
            </distribution>
            <distribution id="log.AC.prior" spec="beast.math.distributions.Prior">
                <distribution id="log.AC.norm" spec="beast.math.distributions.Normal" mean="0" sigma="1"/>
                <x idref="log.ac"/>
            </distribution>
            <distribution id="log.AT.prior" spec="beast.math.distributions.Prior">
                <distribution id="log.AT.norm" spec="beast.math.distributions.Normal" mean="0" sigma="0.7"/>
                <x idref="log.at"/>
            </distribution>
            <distribution id="log.GC.prior" spec="beast.math.distributions.Prior">
                <distribution id="log.GC.norm" spec="beast.math.distributions.Normal" mean="0" sigma="0.5"/>
                <x idref="log.gc"/>
            </distribution>
            <distribution id="log.GT.prior" spec="beast.math.distributions.Prior">
                <distribution id="log.GT.norm" spec="beast.math.distributions.Normal" mean="0" sigma="0.6"/>
                <x idref="log.gt"/>
            </distribution>
            <distribution id='likelihood' idref="treeLikelihood"/>
        </distribution>


        <operator id='logKappa.RW' spec='RealRandomWalkOperator' windowSize="0.5" weight="1" parameter="@log.kappa"/>
        <operator id='logTN.RW' spec='RealRandomWalkOperator' windowSize="0.001" weight="1" parameter="@log.tn"/>
        <operator id='logAC.RW' spec='RealRandomWalkOperator' windowSize="0.001" weight="1" parameter="@log.ac"/>
        <operator id='logAT.RW' spec='RealRandomWalkOperator' windowSize="0.001" weight="1" parameter="@log.at"/>
        <operator id='logGC.RW' spec='RealRandomWalkOperator' windowSize="0.01" weight="1" parameter="@log.gc"/>
        <operator id='logGT.RW' spec='RealRandomWalkOperator' windowSize="0.01" weight="1" parameter="@log.gt"/>
        <operator id="modelChoose.RW" spec='IntRandomWalkOperator' windowSize="1" weight="0.5" parameter="@modelChoose"/>
        <operator id='treeScaler' spec='ScaleOperator' scaleFactor="0.5" weight="1" tree="@tree"/>
        <operator spec='Uniform' weight="10" tree="@tree"/>
        <operator spec='SubtreeSlide' weight="5" gaussian="true" size="1.0" tree="@tree"/>
        <operator id='narrow' spec='Exchange' isNarrow='true' weight="1" tree="@tree"/>
        <operator id='wide' spec='Exchange' isNarrow='false' weight="1" tree="@tree"/>
        <operator spec='WilsonBalding' weight="1" tree="@tree"/>

        <logger logEvery="1000">
	        <model idref='likelihood'/>
            <log idref="likelihood"/>
    	    <ESS spec='ESS' name='log' arg="@likelihood"/>
            <log idref='log.kappa'/>
    	    <ESS spec='ESS' name='log' arg="@log.kappa"/>
            <log idref='log.tn'/>
    	    <ESS spec='ESS' name='log' arg="@log.tn"/>
            <log idref='log.ac'/>
    	    <ESS spec='ESS' name='log' arg="@log.ac"/>
            <log idref='log.at'/>
    	    <ESS spec='ESS' name='log' arg="@log.at"/>
            <log idref='log.gc'/>
    	    <ESS spec='ESS' name='log' arg="@log.gc"/>
            <log idref='log.gt'/>
    	    <ESS spec='ESS' name='log' arg="@log.gt"/>
        </logger>
        <logger logEvery="1000" fileName="testSubstBMA3.log">
	        <model idref='likelihood'/>
            <log idref="likelihood"/>
            <log idref='log.kappa'/>
            <log idref='log.tn'/>
            <log idref='log.ac'/>
            <log idref='log.at'/>
            <log idref='log.gc'/>
            <log idref='log.gt'/>
            <log idref='modelChoose'/>
            <log spec='beast.evolution.tree.TreeHeightLogger' tree='@tree'/>
        </logger>
        <logger logEvery="10000" fileName="testSubstBMA3.trees">
            <log idref="tree"/>
        </logger>
    </run>

</beast>
