<beast version='2.0'
       namespace='beast.core:beast.evolution.tree.coalescent:beast.core.util:beast.evolution.nuc:beast.evolution.operators:beast.evolution.sitemodel:beast.evolution.substitutionmodel:beast.evolution.branchratemodel:beast.evolution.likelihood:beast.core.parameter:beast.math.distributions'>

    <input spec="ParameterList" id="parameterList">
        <parameter spec="RealParameter2" id="parameter1" value="0.2" upper="Infinity" lower="-Infinity"/>
        <parameter spec="RealParameter2" id="parameter2" value="0.1" upper="Infinity" lower="-Infinity"/>
    </input>

    <input spec="DPPointer" id="pointer">
        <input name="uniqueParameter" idref="parameter1"/>
        <input name="uniqueParameter" idref="parameter2"/>
        <input name="initialAssignment" spec="IntegerParameter" value="0 1 1" lower="0" upper="1"/>
    </input>

    <input spec="DPValuable" id="dpValuable">
        <input spec="ParameterList" name="paramList" idref="parameterList"/>
        <input spec="DPPointer" name="pointers" idref="pointer"/>
    </input>

    <input spec="DirichletProcess" id="dp">
        <input name="dpVal" idref="dpValuable"/>
        <input name="baseDistr" id="log.kappa.norm" spec="beast.math.distributions.Normal" mean="0" sigma="0.3"/>
        <input name="alpha" spec="RealParameter" value="1.0" lower="0.0" upper="Infinity"/>
    </input>

    <run spec="MCMC" id="mcmc" chainLength="1000000"> <!--autoOptimize="true"-->
        <state>
            <input name='stateNode' idref='parameterList'/>
            <input name='stateNode' idref='pointer'/>
        </state>

        <distribution spec="CompoundDistribution" id="posterior"/>

        <operator id="dpps" spec="DirichletProcessPriorGibbsSampler" weight="1" sampleSize="5">
            <input name="likelihood" idref="posterior"/>
            <input name="xList" idref="parameterList"/>
            <input name="pointers" idref="pointer"/>
            <input name="dirichletProcess" idref="dp"/>
            <input name="dpVal" idref="dpValuable"/>
        </operator>

        <logger logEvery="10000">
            <log idref="pointer"/>
            <log idref="dpValuable"/>
        </logger>

        <logger logEvery="10" fileName="testDirichletProcessPriorGibbsSampler_2.log">
            <log idref="pointer"/>
            <log idref="dpValuable"/>
        </logger>
    </run>
</beast>