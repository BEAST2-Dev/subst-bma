<beast version='2.0'
       namespace='beast.core:beast.evolution.tree.coalescent:beast.core.util:beast.evolution.nuc:beast.evolution.operators:beast.evolution.sitemodel:beast.evolution.substitutionmodel:beast.evolution.branchratemodel:beast.evolution.likelihood:beast.core.parameter'>

    <input spec="ParameterList" id="parameterList">
        <parameter spec="RealParameter2" id="parameter1" value="0.0" upper="Infinity" lower="-Infinity"/>
        <parameter spec="RealParameter2" id="parameter2" value="1.0" upper="Infinity" lower="-Infinity"/>
        <parameter spec="RealParameter2" id="parameter3" value="2.0" upper="Infinity" lower="-Infinity"/>
    </input>

    <input spec="DPPointer" id="pointer">
        <input name="uniqueParameter" idref="parameter1"/>
        <input name="initialAssignment" spec="IntegerParameter" value="0 0 0" lower="0"/>
    </input>

    <input spec="DPValuable" id="dpValuable">
        <input spec="ParameterList" idref="parameterList"/>
        <input spec="DPPointer" idref="pointer"/>
    </input>

    <run spec="MCMC" id="mcmc" chainLength="100"> <!--autoOptimize="true"-->
        <state>
            <input name='stateNode' idref='parameterList'/>
            <input name='stateNode' idref='pointer'/>
        </state>

        <distribution spec="CompoundDistribution" id="posterior"/>

        <operator id="dpps" spec="DirichletProcessPriorSampler" weight="1">
            <input name="xList" idref="parameterList"/>
            <input name="pointers" idref="pointer"/>
        </operator>

        <logger logEvery="10">
            <log idref="pointer"/>
        </logger>

        <logger logEvery="10" fileName="testDPValuable_1.log">
            <log idref="pointer"/>
        </logger>
    </run>
</beast>